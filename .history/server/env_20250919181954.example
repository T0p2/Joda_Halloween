# Configuración del Servidor
PORT=5000
NODE_ENV=development

# Base de Datos
DATABASE_PATH=./database.sqlite

# JWT Secret (Cambia por una clave segura en producción)
JWT_SECRET=tu_jwt_secret_super_secreto_y_largo_para_produccion_2024

# MercadoPago Credenciales (Obtén las tuyas en https://developers.mercadopago.com)
# IMPORTANTE: Reemplaza estas credenciales con las tuyas reales
